<h1>Editing user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>
	<%= flash[:error]%>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
	<%= recaptcha_tags %>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>